<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.osaka.himayanen.himayanen.TimetableActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="大阪市内 July 12 Sun"
        android:layout_marginBottom="10dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="01"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="02"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="19"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textSize="@dimen/schedule_text_size"
                            android:layout_marginBottom="@dimen/schedule_margin_bottom"/>



                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="540dp"
                            android:text="就寝"
                            android:textColor="#FFFFFF"
                            android:background="#4646ff"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="780dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:text="ホテル"
                            android:textColor="#FFFFFF"
                            android:background="#4646ff"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="検索条件指定"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="・観光の種類"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/kinds_of_sightseeing"
                android:entries="@array/spinner_sightseeing_kinds"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="・地域" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/area"
                android:entries="@array/spinner_area"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="移動手段" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/how_to_move"
                android:entries="@array/spinner_how_to_move"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ひまやねん"
                android:id="@+id/himayanen"
                android:layout_gravity="bottom" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
